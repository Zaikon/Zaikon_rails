<!DOCTYPE html>
<html>
  <head>
    <title>Zaikon</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

  <header class="col-md-12 header">
      <div class="logo">
        <%= link_to "ザイコン", goods_path %>
        <div class="img"><%= image_tag 'icon2.gif', alt: "logo", width: 40 %></div>
      </div>
      <div class="dropdown">
        <i class="fa fa-bars" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
            <% unless user_signed_in? %>
              <li><%= link_to "ログイン", new_user_session_path %></li>
            <% else %>
              <li><%= link_to "新規商品登録", new_good_path %></li>
              <li><%= link_to "カテゴリー管理", categories_path %></li>
              <li><%= link_to "ユーザー管理", users_path(current_user) %></li>
              <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
            <% end %>
          </ul>
      </div>
  </header>


  <%= yield %>

  </body>
</html>
