<div class="contents row">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 
    <div class="form-group">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, type: "email", class: "form-control form_height" %>
    </div>
 
    <div class="form-group">
      <%= f.label :password %><br>
      <%= f.password_field :password, autocomplete: "off", type: "password", class: "form-control form_height" %>
    </div>
 
    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.label :remember_me %>
        <%= f.check_box :remember_me, class: "check_box" %>
      </div>
    <% end %>
 
    <div>
      <%= f.submit "Log in" , class: "submit form_height"%>
    </div>
  <% end %>

  <%= link_to "Sign up", new_user_registration_path, :class => 'sign_up form_height' %>
  </div>