<div class="contents row">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form_group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, type: "email", class: "form-control form_height"  %>
    </div>
    <br>

    <div class="form_group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", type: "password", class: "form-control form_height" %>
    </div>
    <br>

    <div class="form_group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" , type: "password", class: "form-control form_height"%>
    </div>

    <br>
    <div >
      <%= f.submit "Sign up" , class: "submit form_height"%>
    </div>
  <% end %>

  <%= link_to "Log in", new_user_session_path, :class => 'sign_up form_height' %>
</div>
